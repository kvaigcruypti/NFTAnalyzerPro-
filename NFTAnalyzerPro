# NFTAnalyzerPro.py

class NFTAnalyzerPro:
    def __init__(self, platform_name, analysis_features):
        self.platform_name = platform_name
        self.analysis_features = analysis_features
    
    def display_platform_info(self):
        print(f"NFT Analyzer Pro Platform Name: {self.platform_name}")
        print("Analysis Features:")
        for feature in self.analysis_features:
            print(f"- {feature}")

# Example usage
if __name__ == "__main__":
    platform_name = "NFTAnalyzerPro"
    analysis_features = [
        "Marketplace trends analysis",
        "Historical price tracking",
        "Ownership and transaction history",
        "Metadata analysis",
        "NFT rarity assessment"
    ]
    
    nft_analyzer = NFTAnalyzerPro(platform_name, analysis_features)
    nft_analyzer.display_platform_info()
